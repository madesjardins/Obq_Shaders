{
	color
	{
		Name = "Color";
		UIType = "rgba";
		Commands = "{F5C75F11-2F05-11D3-AA95-00AA0068D2C0}";
	}
	channel
	{
		Name = "Channel";
		Commands = "{F5C75F11-2F05-11D3-AA95-00AA0068D2C0}";
		UIType = "Combo";
		Items
		{
			"  Color : Alpha" = 6,
			"Opacity : Red" = 0,
			"Opacity : Green" = 1,
			"Opacity : Blue" = 2,
			"Opacity : Alpha" = 3,
