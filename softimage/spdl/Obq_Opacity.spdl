Layout "Default"
{
	Group "Color"
	{
		color;
	}
	Group "Opacity"
	{
		channel;
		opacityRGBA;
		opacityScalar;
		Row
		{
			hard;
			threshold;
		}
		invert;
	}
}

Layout "RenderTree"
{
	color;
	opacityRGBA;
	opacityScalar;
	hard;
	threshold;
	invert;		
}

Language = "VBScript";
Logic
{

sub channel_OnChanged()
	IF PPG.channel.Value = 5 Then
		PPG.opacityRGBA.Show(False)
		PPG.opacityScalar.Show(True)
	ElseIf PPG.channel.Value = 6 Then
		PPG.opacityRGBA.Show(False)
		PPG.opacityScalar.Show(False)
	Else
		PPG.opacityRGBA.Show(True)
		PPG.opacityScalar.Show(False)
	End IF
	PPG.Refresh
End sub

sub hard_OnChanged()
	PPG.threshold.ReadOnly = Not PPG.hard.Value
End sub

sub OnInit()
	PPG.PPGLayout.SetAttribute "HelpFile","http://s3aws.obliquefx.com/public/shaders/help_files/Obq_Opacity.html"
	channel_OnChanged()
	hard_OnChanged()
End sub

}

